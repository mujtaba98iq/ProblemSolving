 q2:
 
 string name = "Saleem Kassab.",
            city = "Damascus.",
            country = "Syria.";
            byte age = 44;
            double monthlySalary = 600;
            char gender = 'M';
            bool isMarred = false;

            char isMarredChar = isMarred ? '1' : '0';

            Console.Write("*************************" + "\n" +
            "Name: " + name + "\n" +
            "Age: " + age + " Years." + "\n" +
            "City: " + city + "\n" +
            "Country: " + country + "\n" +
            "monthlySalary: " + monthlySalary + "\n" +
            "yearlySalary: " + (monthlySalary * 12) + "\n" +
            "Gender: " + gender + "\n" +
            "Married: " + isMarredChar + "\n" +
            "*************************");
