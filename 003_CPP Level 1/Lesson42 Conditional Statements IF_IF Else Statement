#4:
class Program
{
    public static void Main(string[] args)
    {
        Console.WriteLine(isHired(15, false) ? "Hired" : "Rejected");
    }
    static bool isHired(int age, bool hasCertificate)
    {
        return age > 21 && hasCertificate ? true : false;
    }
}
