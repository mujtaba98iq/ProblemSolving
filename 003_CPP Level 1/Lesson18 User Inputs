q1:

string name = "",
            city = "Damascus.",
            country = "Syria.";
            byte age = 44;
            double monthlySalary = 600;
            char gender = 'M';
            bool isMarred = false;

            Console.Write("Enter your Name: ");
            name = Console.ReadLine();
            Console.Write("Enter your Age: ");
            age = int.Parse(Console.ReadLine());
            Console.Write("Enter your City: ");
            city = Console.ReadLine();
            Console.Write("Enter your Country: ");
            country = Console.ReadLine();
            Console.Write("Enter your Monthly Salary: ");
            monthlySalary = double.Parse(Console.ReadLine());
            Console.Write("Enter your Gender M/F: ");
            gender = char.Parse(Console.ReadLine());
            Console.Write("Are you Marreied 0/1: ");
            isMarred = Console.ReadLine() == "0" ? false : true;

            char isMarredChar = isMarred ? '1' : '0';

            Console.WriteLine();
            Console.Write("*************************" + "\n" +
            "Name: " + name + "\n" +
            "Age: " + age + " Years." + "\n" +
            "City: " + city + "\n" +
            "Country: " + country + "\n" +
            "monthlySalary: " + monthlySalary + "\n" +
            "yearlySalary: " + (monthlySalary * 12) + "\n" +
            "Gender: " + gender + "\n" +
            "Married: " + isMarredChar + "\n" +
            "*************************");

