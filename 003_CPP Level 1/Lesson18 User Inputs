q2:

 int num1, num2, num3;

            Console.Write("Enter Number1: ");
            num1 = int.Parse(Console.ReadLine());
            Console.Write("Enter Number2: ");
            num2 = int.Parse(Console.ReadLine());
            Console.Write("Enter Number3: ");
            num3 = int.Parse(Console.ReadLine());

            Console.WriteLine();
            Console.Write(
                num1 + " +" + "\n" +
                num2 + " +" + "\n" +
                num3 + "\n" +
                "__________________" + "\n" +
                (num1 + num2 + num3)
            );
            
